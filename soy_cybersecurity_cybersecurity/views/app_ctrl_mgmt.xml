    <menuitem name="Declaración de Aplicabilidad"
              id="mitem_block_line_app_ctrl_mgmt"
              parent="menu_app_ctrl_mgmt"
              sequence="2"
              action="matrix_block_line_app_ctrl_mgmt_action"
